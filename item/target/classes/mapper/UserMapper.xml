<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.usermanagement.mapper.UserMapper">

    <select id="findByUsername" resultType="com.example.usermanagement.entity.User">
        SELECT * FROM users
        WHERE username = #{username}
          AND deleted = 0
    </select>

    <select id="findByEmail" resultType="com.example.usermanagement.entity.User">
        SELECT * FROM users
        WHERE email = #{email}
          AND deleted = 0
    </select>

</mapper>